# Django Configuration
DJANGO_SECRET_KEY=your-secret-key-here-generate-with-django-secret-key
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# For PostgreSQL (recommended for production)
DB_NAME=codehub_db
DB_USER=codehub_user
DB_PASSWORD=your_database_password
DB_HOST=localhost
DB_PORT=5432

# Note: If DB_NAME is not set, SQLite will be used automatically (good for development)

# Redis Configuration (for WebSockets and Cache)
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# AI Integration APIs
# OpenAI API Key (for GPT-4 integration)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google Gemini API Key (FREE tier available)
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_GEMINI_API_KEY=your-gemini-api-key-here

# Optional: Anthropic Claude API (future integration)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Firebase Configuration (for OAuth and Authentication)
# Get these from Firebase Console: https://console.firebase.google.com/
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-firebase-private-key-id
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nyour-firebase-private-key-here\n-----END PRIVATE KEY-----
FIREBASE_CLIENT_EMAIL=your-firebase-client-email@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-firebase-client-id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/your-service-account-email

# GitHub OAuth Configuration
# Create OAuth App at: https://github.com/settings/developers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Email Configuration (optional, for notifications)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password

# AWS S3 Configuration (optional, for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=codehub-storage
AWS_S3_REGION_NAME=us-east-1

# Sentry Configuration (optional, for error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# API Rate Limiting (requests per minute)
API_RATE_LIMIT=60

