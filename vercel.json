{
    "version": 2,
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "https://ccis-codehub-api.onrender.com/api/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/$1"
        }
    ],
    "env": {
        "VITE_API_URL": "https://ccis-codehub-api.onrender.com/api",
        "VITE_ENABLE_AI_MENTOR": "true",
        "VITE_GOOGLE_CLIENT_ID": "@google_client_id"
    }
}